<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <!-- Category -->
    <record id="module_category_highland_training" model="ir.module.category">
        <field name="name">Highland Training</field>
        <field name="description">Quản lý đào tạo Highland Coffee</field>
        <field name="sequence">20</field>
    </record>

    <!-- Group: Nhân viên (Employee) - Không kế thừa từ Manager -->
    <record id="group_training_employee" model="res.groups">
        <field name="name">Highland Training / Nhân viên</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Group: Quản lý cửa hàng (Store Manager) - Không kế thừa từ Admin -->
    <record id="group_training_manager" model="res.groups">
        <field name="name">Highland Training / Quản lý cửa hàng</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Group: Admin (Head Office) -->
    <record id="group_training_admin" model="res.groups">
        <field name="name">Highland Training / Quản trị viên</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
