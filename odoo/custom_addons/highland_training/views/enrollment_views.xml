<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enrollment Tree View -->
    <record id="view_training_enrollment_tree" model="ir.ui.view">
        <field name="name">training.enrollment.tree</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <list string="Danh sách học viên" sample="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="department_id"/>
                <field name="enroll_date"/>
                <field name="deadline"/>
                <field name="theory_state" widget="badge" decoration-success="theory_state == 'passed'" decoration-warning="theory_state == 'in_progress'" decoration-danger="theory_state == 'failed'"/>
                <field name="practice_state" widget="badge" decoration-success="practice_state == 'passed'" decoration-warning="practice_state == 'in_progress'" decoration-danger="practice_state == 'failed'"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'learning'" decoration-success="state == 'completed'"/>
            </list>
        </field>
    </record>

    <!-- Enrollment Form View -->
    <record id="view_training_enrollment_form" model="ir.ui.view">
        <field name="name">training.enrollment.form</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <form string="Đăng ký học">
                <header>
                    <button name="action_start_learning" string="Bắt đầu học" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="state in ['completed', 'cancelled']" confirm="Bạn có chắc muốn hủy đăng ký này?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,learning,completed"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Hoàn thành" bg_color="text-bg-success" invisible="state != 'completed'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="course_id"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </group>
                        <group>
                            <field name="enroll_date"/>
                            <field name="deadline"/>
                            <field name="complete_date" readonly="1"/>
                            <field name="manager_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tiến độ học tập" name="progress">
                            <group>
                                <group string="Lý thuyết">
                                    <field name="theory_state"/>
                                    <field name="exam_count"/>
                                    <field name="best_exam_score" widget="float"/>
                                </group>
                                <group string="Thực hành">
                                    <field name="practice_state"/>
                                    <field name="practice_count"/>
                                    <field name="practice_score" widget="float"/>
                                </group>
                            </group>
                        </page>
                        <page string="Nội dung học tập" name="content">
                            <group string="Khóa học">
                                <field name="course_id" readonly="1" options="{'no_open': True}"/>
                            </group>
                            <separator string="Danh sách nội dung học tập"/>
                            <field name="course_content_ids" nolabel="1" readonly="1"/>
                        </page>
                        <page string="Bài thi" name="exams">
                            <field name="exam_ids">
                                <list decoration-success="is_passed == True" decoration-danger="is_passed == False and state == 'graded'">
                                    <field name="name"/>
                                    <field name="start_time"/>
                                    <field name="score" widget="progressbar"/>
                                    <field name="is_passed" widget="boolean_toggle"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Đánh giá thực hành" name="practice">
                            <field name="practice_ids">
                                <list decoration-success="is_passed == True" decoration-danger="is_passed == False and state == 'done'">
                                    <field name="name"/>
                                    <field name="assessor_id"/>
                                    <field name="assessment_date"/>
                                    <field name="score" widget="progressbar"/>
                                    <field name="is_passed" widget="boolean_toggle"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Chứng nhận" name="certificate" invisible="not certificate_id">
                            <group>
                                <field name="certificate_id"/>
                            </group>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <field name="notes" placeholder="Ghi chú..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Enrollment Kanban View -->
    <record id="view_training_enrollment_kanban" model="ir.ui.view">
        <field name="name">training.enrollment.kanban</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" group_create="false">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="theory_state"/>
                <field name="practice_state"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                    <div class="text-muted">
                                        <field name="course_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="theory_state" widget="badge"/>
                                <field name="practice_state" widget="badge"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Enrollment Search View -->
    <record id="view_training_enrollment_search" model="ir.ui.view">
        <field name="name">training.enrollment.search</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="department_id"/>
                <filter string="Đang học" name="learning" domain="[('state', '=', 'learning')]"/>
                <filter string="Hoàn thành" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Quá hạn" name="overdue" domain="[('deadline', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', '!=', 'completed')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Cửa hàng" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Enrollment Action -->
    <record id="action_training_enrollment" model="ir.actions.act_window">
        <field name="name">Quản lý học viên</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_learning': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Phân công nhân viên vào khóa học
            </p>
        </field>
    </record>

    <!-- Employee: My Enrollments -->
    <record id="action_my_enrollments" model="ir.actions.act_window">
        <field name="name">Khóa học của tôi</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("employee_id.user_id", "=", uid)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bạn chưa được phân công vào khóa học nào
            </p>
            <p>
                Vui lòng liên hệ Admin hoặc truy cập Portal: /my/trainings
            </p>
        </field>
    </record>

</odoo>
