<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Certificate Tree View -->
    <record id="view_training_certificate_tree" model="ir.ui.view">
        <field name="name">training.certificate.tree</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <list string="Chứng nhận" sample="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="theory_score"/>
                <field name="practice_score"/>
                <field name="state" widget="badge" decoration-success="state == 'valid'" decoration-warning="state == 'expired'" decoration-danger="state == 'revoked'"/>
            </list>
        </field>
    </record>

    <!-- Certificate Form View -->
    <record id="view_training_certificate_form" model="ir.ui.view">
        <field name="name">training.certificate.form</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <form string="Chứng nhận">
                <header>
                    <button name="action_revoke" string="Thu hồi" type="object" invisible="state == 'revoked'" class="btn-danger" confirm="Bạn có chắc muốn thu hồi chứng nhận này?"/>
                    <button name="action_reactivate" string="Kích hoạt lại" type="object" invisible="state != 'revoked'" class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Hết hiệu lực" bg_color="text-bg-warning" invisible="state != 'expired'"/>
                    <widget name="web_ribbon" title="Thu hồi" bg_color="text-bg-danger" invisible="state != 'revoked'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="course_id"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Kết quả">
                        <group>
                            <field name="theory_score" widget="float"/>
                        </group>
                        <group>
                            <field name="practice_score" widget="float"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Ghi chú..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Certificate Form View - Employee (Read-Only) -->
    <record id="view_training_certificate_form_employee" model="ir.ui.view">
        <field name="name">training.certificate.form.employee</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <form string="Chứng nhận của tôi">
                <sheet>
                    <widget name="web_ribbon" title="Hết hiệu lực" bg_color="text-bg-warning" invisible="state != 'expired'"/>
                    <widget name="web_ribbon" title="Thu hồi" bg_color="text-bg-danger" invisible="state != 'revoked'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="issue_date" readonly="1"/>
                            <field name="expiry_date" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    <group string="Kết quả">
                        <group>
                            <field name="theory_score" widget="float" readonly="1"/>
                        </group>
                        <group>
                            <field name="practice_score" widget="float" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Certificate Search View -->
    <record id="view_training_certificate_search" model="ir.ui.view">
        <field name="name">training.certificate.search</field>
        <field name="model">training.certificate</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm chứng nhận">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <filter string="Còn hiệu lực" name="valid" domain="[('state', '=', 'valid')]"/>
                <filter string="Hết hiệu lực" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Thu hồi" name="revoked" domain="[('state', '=', 'revoked')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Certificate Action -->
    <record id="action_training_certificate" model="ir.actions.act_window">
        <field name="name">Chứng nhận</field>
        <field name="res_model">training.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_valid': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có chứng nhận nào
            </p>
        </field>
    </record>

    <!-- Employee: My Certificates -->
    <record id="action_my_certificates" model="ir.actions.act_window">
        <field name="name">Chứng chỉ của tôi</field>
        <field name="res_model">training.certificate</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("employee_id.user_id", "=", uid)]</field>
        <field name="context">{}</field>
        <field name="views">[(False, 'list'), (ref('view_training_certificate_form_employee'), 'form')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bạn chưa có chứng nhận nào
            </p>
            <p>
                Hoàn thành khóa học để nhận chứng nhận!
            </p>
        </field>
    </record>

</odoo>
