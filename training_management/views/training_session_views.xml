<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_training_session_calendar" model="ir.ui.view">
        <field name="name">training.session.calendar</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <calendar string="Lịch đào tạo" date_start="start_date" date_stop="end_date" color="course_id" mode="month" quick_create="0" event_open_popup="true">
                <field name="name"/>
                <field name="trainer_id" filters="1"/>
                <field name="location"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <record id="view_training_session_tree" model="ir.ui.view">
        <field name="name">training.session.list</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <list string="Lớp học tập trung" decoration-info="state == 'scheduled'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="course_id"/>
                <field name="trainer_id" widget="many2one_avatar_user"/>
                <field name="start_date"/>
                <field name="location"/>
                <field name="attendees_count" string="Sĩ số"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_training_session_form" model="ir.ui.view">
        <field name="name">training.session.form</field>
        <field name="model">training.session</field>
        <field name="arch" type="xml">
            <form string="Chi tiết buổi học">
                <header>
                    <button name="action_schedule" string="Xác nhận Lên lịch" type="object" class="oe_highlight" invisible="state != 'draft'"/>

                    <button name="action_start" string="Bắt đầu lớp" type="object" class="btn-primary" invisible="state != 'scheduled'"/>

                    <button name="action_finish" string="Kết thúc &amp; Điểm danh" type="object" class="btn-success" invisible="state != 'in_progress'"/>

                    <button name="action_cancel" string="Hủy bỏ" type="object" invisible="state in ('draft', 'cancelled', 'completed')"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- TODO: Implement action_view_reminders method
                        <button name="action_view_reminders" type="object" class="oe_stat_button" icon="fa-bell" invisible="reminder_count == 0">
                            <field name="reminder_count" widget="statinfo" string="Nhắc nhở"/>
                        </button>
                        <button name="action_create_reminder" type="object" class="oe_stat_button" icon="fa-plus-circle" string="Tạo nhắc nhở"/>
                        -->
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Vd: Workshop Pha chế K42..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="course_id"/>
                            <field name="trainer_id" widget="many2one_avatar_user"/>
                            <field name="location" placeholder="Phòng họp A / Cửa hàng..."/>
                            <!-- <field name="auto_create_reminder"/> TODO: Add this field to model -->
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration" widget="float_time"/>
                            <field name="calendar_event_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Danh sách học viên">
                            <field name="enrollment_ids" domain="[('course_id', '=', course_id)]" readonly="state in ('completed', 'cancelled')">
                                <list string="Học viên" decoration-success="state == 'completed'">
                                    <field name="employee_id" widget="many2one_avatar_user"/>
                                    <!-- <field name="job_position_id"/> TODO: Fix related field in training.enrollment -->
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_training_session" model="ir.actions.act_window">
        <field name="name">Lịch học tập trung</field>
        <field name="res_model">training.session</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{'search_default_scheduled': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo buổi đào tạo trực tiếp (Offline)
            </p>
            <p>
                Quản lý lịch học, giảng viên và danh sách học viên tham gia.
            </p>
        </field>
    </record>

</odoo>