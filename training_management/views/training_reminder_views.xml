<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_training_reminder_form" model="ir.ui.view">
        <field name="name">training.reminder.form</field>
        <field name="model">training.reminder</field>
        <field name="arch" type="xml">
            <form string="Nhắc nhở">
                <header>
                    <button name="action_send_reminder" string="Gửi ngay" type="object" invisible="state != 'pending'" class="oe_highlight"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="state != 'pending'" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,sent"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên nhắc nhở..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reminder_type"/>
                            <field name="session_id" invisible="reminder_type != 'session'"/>
                            <field name="enrollment_id" invisible="reminder_type != 'enrollment'"/>
                            <field name="exam_id" invisible="reminder_type != 'exam'"/>
                            <field name="reminder_date"/>
                            <field name="sent_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="send_notification" widget="boolean_toggle"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Người nhận">
                            <group>
                                <field name="recipient_ids" widget="many2many_tags" placeholder="Chọn đối tác..."/>
                                <field name="employee_ids" widget="many2many_tags" placeholder="Chọn nhân viên..."/>
                            </group>
                        </page>
                        <page string="Nội dung">
                            <field name="message" widget="html" placeholder="Nội dung thông báo hiển thị trên hệ thống..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_training_reminder_list" model="ir.ui.view">
        <field name="name">training.reminder.list</field>
        <field name="model">training.reminder</field>
        <field name="arch" type="xml">
            <list string="Nhắc nhở" decoration-info="state=='pending'" decoration-success="state=='sent'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="reminder_type"/>
                <field name="reminder_date"/>
                <field name="send_notification" optional="hide"/>
                <field name="state" widget="badge" decoration-success="state == 'sent'"/>
                <button name="action_send_reminder" string="Gửi" type="object" icon="fa-paper-plane" invisible="state != 'pending'"/>
            </list>
        </field>
    </record>

    <record id="view_training_reminder_template_form" model="ir.ui.view">
        <field name="name">training.reminder.template.form</field>
        <field name="model">training.reminder.template</field>
        <field name="arch" type="xml">
            <form string="Mẫu nhắc nhở">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_toggle"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ví dụ: Nhắc nhở trước buổi học 1 ngày"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="reminder_type"/>
                            <label for="days_before" string="Thời gian"/>
                            <div class="o_row">
                                <field name="days_before"/>
                                <span>ngày</span>
                            </div>
                        </group>
                        <group>
                            <field name="send_notification" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Nội dung mẫu">
                        <div class="text-muted mb-2">
                            Các biến hỗ trợ: {name}, {course}, {date}, {location}
                        </div>
                        <field name="message_template" widget="html" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_training_reminder" model="ir.actions.act_window">
        <field name="name">Nhắc nhở</field>
        <field name="res_model">training.reminder</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
    </record>

    <record id="action_training_reminder_template" model="ir.actions.act_window">
        <field name="name">Cấu hình mẫu nhắc nhở</field>
        <field name="res_model">training.reminder.template</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>