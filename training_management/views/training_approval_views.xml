<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. KANBAN VIEW (QUAN TRỌNG CHO MOBILE) -->
    <record id="view_training_enrollment_kanban" model="ir.ui.view">
        <field name="name">training.enrollment.kanban</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                <field name="id"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="state"/>
                <field name="theory_score"/>
                <field name="practical_score"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="employee_id"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="course_id"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body mt-2">
                                <div t-if="record.state.raw_value == 'theory'">
                                    <span class="text-warning">
                                        <i class="fa fa-book"/>
 Đang học Lý thuyết</span>
                                </div>
                                <div t-if="record.state.raw_value == 'practical'">
                                    <span class="text-primary">
                                        <i class="fa fa-cogs"/>
 Chờ chấm Thực hành</span>
                                    <div class="small">LT: <field name="theory_score"/>
%</div>
                                </div>
                                <div t-if="record.state.raw_value == 'done'">
                                    <span class="text-success">
                                        <i class="fa fa-check-circle"/>
 Hoàn thành</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_right">
                                    <field name="mentor_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 2. FORM VIEW -->
    <record id="view_training_enrollment_form" model="ir.ui.view">
        <field name="name">training.enrollment.form</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <form string="Hồ sơ học tập">
                <header>
                    <button name="action_start_learning" string="Bắt đầu học" type="object" class="oe_highlight" invisible="state != 'draft'"/>

                    <!-- Nút dành cho Cửa hàng trưởng chấm thực hành -->
                    <button name="action_pass_practical" string="Xác nhận Đậu Thực hành" type="object" class="oe_highlight" invisible="state != 'practical'" groups="base.group_user"/>

                    <button name="action_fail" string="Không đạt" type="object" invisible="state not in ['theory', 'practical']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,theory,practical,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="employee_id" placeholder="Chọn nhân viên..."/>
                        </h1>
                        <h3>
                            <field name="course_id" placeholder="Chọn quy trình đào tạo..."/>
                        </h3>
                    </div>
                    <group>
                        <group string="Thông tin chung">
                            <field name="mentor_id" widget="many2one_avatar_user"/>
                            <field name="start_date"/>
                            <field name="completion_date" readonly="1"/>
                        </group>
                        <group string="Kết quả">
                            <field name="theory_score" widget="percentage" readonly="1"/>
                            <field name="is_theory_passed" widget="boolean_toggle" readonly="1"/>
                            <separator/>
                            <field name="practical_score" widget="percentage" readonly="state != 'practical'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Lịch sử thi Lý thuyết">
                            <field name="exam_attempt_ids" readonly="1">
                                <tree>
                                    <field name="create_date" string="Ngày thi"/>
                                    <field name="score" widget="percentage"/>
                                    <field name="is_passed" widget="boolean_toggle"/>
                                    <field name="state" widget="badge" decoration-success="state == 'submitted'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Nhận xét Thực hành (OJT)">
                            <field name="practical_feedback" placeholder="Nhận xét của Cửa hàng trưởng về kỹ năng thao tác..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 3. SEARCH VIEW -->
    <record id="view_training_enrollment_search" model="ir.ui.view">
        <field name="name">training.enrollment.search</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="course_id"/>
                <filter string="Cần duyệt thực hành" name="to_grade" domain="[('state', '=', 'practical')]"/>
                <filter string="Đã hoàn thành" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Quy trình (SOP)" name="group_course" context="{'group_by': 'course_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 4. ACTION -->
    <record id="action_training_enrollment" model="ir.actions.act_window">
        <field name="name">Phân công đào tạo</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_state': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Phân công khóa học mới cho nhân viên
            </p>
        </field>
    </record>

</odoo>