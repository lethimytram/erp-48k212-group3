<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Approval Form View -->
    <record id="view_training_approval_form" model="ir.ui.view">
        <field name="name">training.approval.form</field>
        <field name="model">training.approval</field>
        <field name="arch" type="xml">
            <form string="Phê duyệt đào tạo">
                <header>
                    <button name="action_submit" string="Gửi phê duyệt" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="state in ['approved', 'rejected', 'cancelled']"/>
                    <button name="action_reset_to_draft" string="Đặt lại nháp" type="object" invisible="state not in ['cancelled', 'rejected']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Stat button for state -->
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="enrollment_id" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="config_id" readonly="1"/>
                            <field name="request_date" readonly="1"/>
                            <field name="approval_date" readonly="1" invisible="not approval_date"/>
                            <field name="rejection_date" readonly="1" invisible="not rejection_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Chi tiết phê duyệt" name="approval_lines">
                            <field name="approval_line_ids" readonly="state in ['approved', 'rejected', 'cancelled']">
                                <list string="Các bước phê duyệt" editable="bottom">
                                    <field name="step_id" readonly="1"/>
                                    <field name="approver_id" readonly="1"/>
                                    <field name="state" widget="badge" decoration-info="state == 'waiting'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                                    <field name="approval_date" readonly="1"/>
                                    <field name="rejection_date" readonly="1"/>
                                    <field name="notes"/>
                                    <button name="action_approve" string="Duyệt" type="object" icon="fa-check" class="btn-success" invisible="state != 'pending'"/>
                                    <button name="action_reject" string="Từ chối" type="object" icon="fa-times" class="btn-danger" invisible="state != 'pending'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ghi chú" name="notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Ghi chú thêm..."/>
                            </group>
                        </page>
                        <page string="Lý do từ chối" name="rejection" invisible="not rejection_reason">
                            <group>
                                <field name="rejection_reason" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Training Approval List View -->
    <record id="view_training_approval_list" model="ir.ui.view">
        <field name="name">training.approval.list</field>
        <field name="model">training.approval</field>
        <field name="arch" type="xml">
            <list string="Phê duyệt đào tạo" default_order="create_date desc">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="current_step_id"/>
                <field name="request_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                <button name="action_submit" string="Gửi" type="object" icon="fa-paper-plane" invisible="state != 'draft'"/>
            </list>
        </field>
    </record>

    <!-- Training Approval Search View -->
    <record id="view_training_approval_search" model="ir.ui.view">
        <field name="name">training.approval.search</field>
        <field name="model">training.approval</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phê duyệt">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="state"/>

                <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Chờ phê duyệt" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Từ chối" name="rejected" domain="[('state', '=', 'rejected')]"/>

                <separator/>
                <filter string="Phê duyệt của tôi" name="my_approvals" domain="[('approval_line_ids.approver_id', '=', uid), ('approval_line_ids.state', '=', 'pending')]"/>

                <separator/>
                <filter string="Tháng này" name="this_month" domain="[('request_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Nhóm theo">
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Nhân viên" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Ngày yêu cầu" name="group_request_date" context="{'group_by': 'request_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Training Approval Action -->
    <record id="action_training_approval" model="ir.actions.act_window">
        <field name="name">Phê duyệt đào tạo</field>
        <field name="res_model">training.approval</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo yêu cầu phê duyệt đào tạo mới
            </p>
            <p>
                Quy trình phê duyệt tự động sẽ được áp dụng dựa trên cấu hình khóa học.
            </p>
        </field>
    </record>

    <!-- My Approvals Action -->
    <record id="action_my_training_approvals" model="ir.actions.act_window">
        <field name="name">Phê duyệt của tôi</field>
        <field name="res_model">training.approval</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_approvals': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có yêu cầu phê duyệt nào đang chờ bạn
            </p>
        </field>
    </record>

    <!-- Training Approval Config Form View -->
    <record id="view_training_approval_config_form" model="ir.ui.view">
        <field name="name">training.approval.config.form</field>
        <field name="model">training.approval.config</field>
        <field name="arch" type="xml">
            <form string="Cấu hình phê duyệt">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ví dụ: Phê duyệt khóa học quốc tế"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Điều kiện áp dụng">
                            <field name="sequence"/>
                            <field name="course_category_ids" widget="many2many_tags"/>
                            <field name="min_duration"/>
                            <field name="max_duration"/>
                        </group>
                        <group string="Chi phí">
                            <field name="min_cost"/>
                            <field name="max_cost"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Các bước phê duyệt" name="steps">
                            <field name="approval_step_ids">
                                <list string="Bước phê duyệt" editable="bottom">
                                    <field name="name"/>
                                    <field name="approver_type"/>
                                    <field name="user_id" invisible="approver_type != 'specific_user'" required="approver_type == 'specific_user'"/>
                                    <field name="can_edit"/>
                                    <field name="required_note"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Approval Config List View -->
    <record id="view_training_approval_config_list" model="ir.ui.view">
        <field name="name">training.approval.config.list</field>
        <field name="model">training.approval.config</field>
        <field name="arch" type="xml">
            <list string="Cấu hình phê duyệt">

                <field name="name"/>
                <field name="course_category_ids" widget="many2many_tags"/>
                <field name="min_duration"/>
                <field name="max_duration"/>
                <field name="min_cost"/>
                <field name="max_cost"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Training Approval Config Action -->
    <record id="action_training_approval_config" model="ir.actions.act_window">
        <field name="name">Cấu hình phê duyệt</field>
        <field name="res_model">training.approval.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo cấu hình phê duyệt mới
            </p>
            <p>
                Thiết lập quy trình phê duyệt tự động cho các loại khóa học khác nhau.
            </p>
        </field>
    </record>

</odoo>
