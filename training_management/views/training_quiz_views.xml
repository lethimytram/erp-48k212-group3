<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. SEARCH VIEW -->
    <record id="view_training_material_search" model="ir.ui.view">
        <field name="name">training.material.search</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm tài liệu">
                <field name="name"/>
                <field name="course_id"/>
                <field name="tag_ids"/>
                <filter string="Công thức (Recipe)" name="type_recipe" domain="[('material_type', '=', 'recipe')]"/>
                <filter string="Video" name="type_video" domain="[('material_type', '=', 'video')]"/>
                <filter string="Bắt buộc học" name="required" domain="[('required_reading', '=', True)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Loại tài liệu" name="group_type" context="{'group_by': 'material_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 2. TREE VIEW (Dùng tree thay vì list để tương thích tốt hơn) -->
    <record id="view_training_material_tree" model="ir.ui.view">
        <field name="name">training.material.tree</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <list string="Danh sách tài liệu">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="course_id"/>
                <field name="material_type" widget="badge" decoration-info="material_type == 'recipe'" decoration-danger="material_type == 'video'" decoration-muted="material_type == 'document'"/>
                <field name="file_size" optional="hide"/>
                <field name="view_count" optional="show"/>
                <field name="download_count" optional="hide"/>
                <field name="required_reading" widget="boolean_toggle"/>
                <button name="action_view" string="Xem" type="object" icon="fa-eye"/>
                <button name="action_download" string="Tải" type="object" icon="fa-download" invisible="material_type == 'recipe'"/>
            </list>
        </field>
    </record>

    <!-- 3. FORM VIEW (Đã thêm Logic hiển thị theo loại) -->
    <record id="view_training_material_form" model="ir.ui.view">
        <field name="name">training.material.form</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <form string="Chi tiết tài liệu">
                <header>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <!-- Button Box Thống kê -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view" type="object" class="oe_stat_button" icon="fa-eye">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="view_count"/>
                                </span>
                                <span class="o_stat_text">Lượt xem</span>
                            </div>
                        </button>
                        <button name="action_download" type="object" class="oe_stat_button" icon="fa-download" invisible="material_type == 'recipe'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="download_count"/>
                                </span>
                                <span class="o_stat_text">Lượt tải</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Vd: Công thức Phin Sữa Đá..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="course_id"/>
                            <field name="material_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="required_reading" widget="boolean_toggle"/>
                            <field name="duration" widget="float_time"/>
                            <field name="is_public" widget="boolean_toggle"/>
                            <field name="author_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>

                    <!-- PHẦN QUAN TRỌNG: Hiển thị có điều kiện -->
                    <group string="Nội dung">
                        <!-- 1. Nếu là Recipe: Hiện khung soạn thảo -->
                        <field name="content" widget="html" nolabel="1" invisible="material_type != 'recipe'" placeholder="Soạn thảo công thức, định lượng, cách làm..."/>

                        <!-- 2. Nếu là Video/Link: Hiện URL -->
                        <field name="url" widget="url" invisible="material_type not in ('video', 'link')" placeholder="https://www.youtube.com/..."/>

                        <!-- 3. Nếu là Document: Hiện File Upload -->
                        <field name="attachment_ids" widget="many2many_binary" invisible="material_type not in ('document', 'presentation', 'quiz')">
                            <list>
                                <field name="name"/>
                                <field name="file_size"/>
                            </list>
                        </field>
                    </group>

                    <notebook>
                        <page string="Ghi chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 4. KANBAN VIEW -->
    <record id="view_training_material_kanban" model="ir.ui.view">
        <field name="name">training.material.kanban</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="course_id">
                <field name="name"/>
                <field name="material_type"/>
                <field name="file_size"/>
                <field name="view_count"/>
                <field name="required_reading"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <!-- Icon động theo loại -->
                                    <i t-if="record.material_type.raw_value == 'recipe'" class="fa fa-cutlery text-warning mr-1"/>
                                    <i t-if="record.material_type.raw_value == 'video'" class="fa fa-youtube-play text-danger mr-1"/>
                                    <i t-if="record.material_type.raw_value == 'document'" class="fa fa-file-text-o text-primary mr-1"/>
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span t-if="record.required_reading.raw_value" class="badge text-bg-danger">Bắt buộc</span>
                                    <span t-if="record.file_size.raw_value != '0 KB'" class="text-muted small ml-2">
                                        <field name="file_size"/>
                                    </span>
                                </div>
                                <div class="mt-2">
                                    <span class="text-muted">
                                        <i class="fa fa-eye"/>
                                        <field name="view_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_training_material" model="ir.actions.act_window">
        <field name="name">Tài liệu / Công thức</field>
        <field name="res_model">training.material</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_group_course': 1}</field>
    </record>

</odoo>