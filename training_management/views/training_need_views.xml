<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_training_need_tree" model="ir.ui.view">
        <field name="name">training.need.tree</field>
        <field name="model">training.need</field>
        <field name="arch" type="xml">
            <list string="Nhu cầu đào tạo">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_training_need_form" model="ir.ui.view">
        <field name="name">training.need.form</field>
        <field name="model">training.need</field>
        <field name="arch" type="xml">
            <form string="Nhu cầu đào tạo">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="department_id"/>
                    </group>
                    <field name="description" placeholder="Mô tả nhu cầu đào tạo..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_training_need" model="ir.actions.act_window">
        <field name="name">Nhu cầu đào tạo</field>
        <field name="res_model">training.need</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
