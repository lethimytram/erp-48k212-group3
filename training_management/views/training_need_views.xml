<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_training_need_tree" model="ir.ui.view">
        <field name="name">training.need.list</field>
        <field name="model">training.need</field>
        <field name="arch" type="xml">
            <list string="Nhu cầu đào tạo" decoration-danger="urgency == '3'" decoration-success="state == 'done'" decoration-muted="state == 'rejected'">
                <field name="name"/>
                <field name="employee_id" widget="many2one_avatar_user"/>
                <field name="department_id" optional="show"/>
                <field name="suggested_course_id" optional="show"/>
                <field name="urgency" widget="priority" optional="show"/>
                <field name="deadline" optional="hide"/>
                <field name="state" widget="badge" decoration-info="state == 'waiting'" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <record id="view_training_need_form" model="ir.ui.view">
        <field name="name">training.need.form</field>
        <field name="model">training.need</field>
        <field name="arch" type="xml">
            <form string="Nhu cầu đào tạo">
                <header>
                    <button name="action_submit" string="Gửi đề xuất" type="object" class="oe_highlight" invisible="state != 'draft'"/>

                    <button name="action_create_enrollment" string="Tạo hồ sơ học" type="object" class="btn-primary" invisible="state != 'approved'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ví dụ: Đào tạo kỹ năng Barista nâng cao..."/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="suggested_course_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="urgency" widget="priority"/>
                            <field name="deadline"/>
                            <!-- <field name="approval_id" invisible="1"/> TODO: Implement approval workflow -->
                            <field name="enrollment_id" invisible="not enrollment_id" readonly="1"/>
                        </group>
                    </group>

                    <group string="Chi tiết">
                        <field name="description" placeholder="Mô tả lý do tại sao nhân viên cần khóa đào tạo này..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_training_need_search" model="ir.ui.view">
        <field name="name">training.need.search</field>
        <field name="model">training.need</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="suggested_course_id"/>
                <filter string="Chờ duyệt" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Khẩn cấp" name="urgent" domain="[('urgency', 'in', ['2','3'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Phòng ban" name="group_dept" context="{'group_by': 'department_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_training_need" model="ir.actions.act_window">
        <field name="name">Nhu cầu đào tạo</field>
        <field name="res_model">training.need</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_state': 1}</field>
    </record>

</odoo>