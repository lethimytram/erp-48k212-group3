<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_training_material_tree" model="ir.ui.view">
        <field name="name">training.material.tree</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <list string="Tài liệu" default_order="course_id">

                <field name="name"/>
                <field name="course_id"/>
                <field name="material_type" widget="badge"/>
                <field name="required_reading" widget="boolean_toggle"/>
                <field name="attachment_count"/>
                <field name="file_size"/>
                <field name="download_count"/>
                <field name="view_count"/>
                <field name="url" widget="url"/>
                <button name="action_view" string="Xem" type="object" icon="fa-eye"/>
                <button name="action_download" string="Tải" type="object" icon="fa-download"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_training_material_form" model="ir.ui.view">
        <field name="name">training.material.form</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <form string="Tài liệu">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-paperclip" invisible="attachment_count == 0">
                            <field name="attachment_count" widget="statbutton" string="Files"/>
                        </button>
                        <button name="action_view" type="object" class="oe_stat_button" icon="fa-eye">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="view_count"/>
                                </span>
                                <span class="o_stat_text">Lượt xem</span>
                            </div>
                        </button>
                        <button name="action_download" type="object" class="oe_stat_button" icon="fa-download">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="download_count"/>
                                </span>
                                <span class="o_stat_text">Lượt tải</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Lưu trữ" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Tên tài liệu"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="course_id"/>
                            <field name="material_type"/>
                            <field name="sequence"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="required_reading" widget="boolean_toggle"/>
                            <field name="is_public" widget="boolean_toggle"/>
                            <field name="duration" invisible="material_type not in ['video', 'presentation']"/>
                            <field name="author_id" widget="many2one_avatar_user"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" widget="html" placeholder="Mô tả chi tiết về tài liệu..."/>
                    </group>
                    <notebook>
                        <page string="File đính kèm">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                                <group>
                                    <field name="file_size" readonly="1"/>
                                    <field name="file_format"/>
                                </group>
                            </group>
                        </page>
                        <page string="Liên kết" invisible="material_type not in ['video', 'link']">
                            <group>
                                <field name="url" widget="url" placeholder="https://..."/>
                            </group>
                        </page>
                        <page string="Tags">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </page>
                        <page string="Ghi chú">
                            <field name="notes" placeholder="Ghi chú thêm..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_training_material_kanban" model="ir.ui.view">
        <field name="name">training.material.kanban</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="course_id"/>
                <field name="material_type"/>
                <field name="attachment_count"/>
                <field name="download_count"/>
                <field name="view_count"/>
                <field name="required_reading"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <i t-att-class="'fa ' + (record.material_type.raw_value == 'document' ? 'fa-file-text-o' : record.material_type.raw_value == 'video' ? 'fa-video-camera' : record.material_type.raw_value == 'presentation' ? 'fa-file-powerpoint-o' : record.material_type.raw_value == 'exercise' ? 'fa-edit' : record.material_type.raw_value == 'test' ? 'fa-check-square-o' : record.material_type.raw_value == 'link' ? 'fa-link' : 'fa-file-o')"/>
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="course_id"/>
                                    </span>
                                </div>
                                <span t-if="record.required_reading.raw_value" class="badge badge-danger">Bắt buộc</span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="material_type" widget="label_selection"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>
                                        <i class="fa fa-paperclip" title="Tệp đính kèm"/>
                                        <field name="attachment_count"/>
                                    </span>
                                    <span>
                                        <i class="fa fa-eye" title="Lượt xem"/>
                                        <field name="view_count"/>
                                    </span>
                                    <span>
                                        <i class="fa fa-download" title="Lượt tải"/>
                                        <field name="download_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_training_material_search" model="ir.ui.view">
        <field name="name">training.material.search</field>
        <field name="model">training.material</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm tài liệu">
                <field name="name" string="Tài liệu"/>
                <field name="course_id"/>
                <field name="author_id"/>
                <field name="tag_ids"/>
                <separator/>
                <filter string="Tài liệu của tôi" name="my_materials" domain="[('author_id', '=', uid)]"/>
                <filter string="Bắt buộc" name="required" domain="[('required_reading', '=', True)]"/>
                <filter string="Công khai" name="public" domain="[('is_public', '=', True)]"/>
                <separator/>
                <filter string="Tài liệu" name="document" domain="[('material_type', '=', 'document')]"/>
                <filter string="Video" name="video" domain="[('material_type', '=', 'video')]"/>
                <filter string="Bài trình bày" name="presentation" domain="[('material_type', '=', 'presentation')]"/>
                <filter string="Bài tập" name="exercise" domain="[('material_type', '=', 'exercise')]"/>
                <separator/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Lưu trữ" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Loại tài liệu" name="group_type" context="{'group_by': 'material_type'}"/>
                    <filter string="Người tạo" name="group_author" context="{'group_by': 'author_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_training_material" model="ir.actions.act_window">
        <field name="name">Tài liệu</field>
        <field name="res_model">training.material</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm tài liệu học tập
            </p>
            <p>
                Quản lý tài liệu cho các khóa học đào tạo.
            </p>
        </field>
    </record>

</odoo>
