<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_form_inherit_training" model="ir.ui.view">
        <field name="name">hr.employee.form.training</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button name="action_view_enrollments" class="oe_stat_button" icon="fa-graduation-cap" type="object" groups="training_management.group_training_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="enrollment_count"/>
                        </span>
                        <span class="o_stat_text">Khóa học</span>
                    </div>
                </button>
            </div>

            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="is_trainer"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Hồ sơ Giảng viên" name="training_profile" invisible="not is_trainer">
                    <group>
                        <group string="Thông tin giảng dạy">
                            <field name="trainer_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="trainer_rating" widget="priority"/>
                        </group>
                        <group string="Chuyên môn">
                            <field name="trainer_course_ids" widget="many2many_tags" placeholder="Chọn các môn có thể dạy..."/>
                        </group>
                    </group>

                    <separator string="Lịch sử đứng lớp (Training Sessions)"/>
                    <field name="session_ids" readonly="1">
                        <list decoration-success="state == 'done'" decoration-info="state == 'scheduled'">
                            <field name="name"/>
                            <field name="course_id"/>
                            <field name="start_date"/>
                            <field name="location"/>
                            <field name="state" widget="badge"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <record id="view_employee_filter_inherit_training" model="ir.ui.view">
        <field name="name">hr.employee.search.training</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <filter name="group_job" position="after">
                <filter string="Là Giảng viên" name="is_trainer" domain="[('is_trainer', '=', True)]"/>
            </filter>
        </field>
    </record>

    <record id="action_training_trainer" model="ir.actions.act_window">
        <field name="name">Đội ngũ Giảng viên</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_trainer', '=', True)]</field>
        <field name="context">{'default_is_trainer': True, 'search_default_is_trainer': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thiết lập đội ngũ giảng viên
            </p>
            <p>
                Danh sách này lấy từ Hồ sơ nhân sự. Hãy tick chọn "Là giảng viên" trong hồ sơ nhân viên để họ xuất hiện ở đây.
            </p>
        </field>
    </record>

</odoo>