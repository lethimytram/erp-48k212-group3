<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_training_enrollment_tree" model="ir.ui.view">
        <field name="name">training.enrollment.list</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <list string="Tiến độ đào tạo" decoration-muted="state == 'cancelled'" decoration-success="state == 'completed'" decoration-warning="state == 'practical_test'">
                <!-- <field name="name"/> TODO: Fix field validation issue -->
                <field name="course_id"/>
                <field name="employee_id" widget="many2one_avatar_user"/>
                <!-- <field name="job_position_id" optional="hide"/> TODO: Fix related field validation -->
                <field name="enrollment_date"/>

                <field name="is_theory_passed" widget="boolean_toggle" readonly="1"/>
                <field name="is_practical_passed" widget="boolean_toggle" readonly="1"/>

                <field name="state" widget="badge" decoration-info="state == 'learning'" decoration-warning="state == 'theory_test'" decoration-danger="state == 'practical_test'" decoration-success="state == 'completed'"/>
            </list>
        </field>
    </record>

    <record id="view_training_enrollment_form" model="ir.ui.view">
        <field name="name">training.enrollment.form</field>
        <field name="model">training.enrollment</field>
        <field name="arch" type="xml">
            <form string="Hồ sơ đào tạo">
                <header>
                    <button name="action_submit_approval" string="Gửi duyệt học" type="object" class="oe_highlight" invisible="state != 'draft'"/>

                    <button name="action_start_theory_test" string="Làm bài thi Lý thuyết" type="object" class="btn-primary" invisible="state != 'learning'"/>

                    <button name="action_move_to_practical" string="Đăng ký thi Thực hành" type="object" class="btn-warning" invisible="state != 'theory_test' or not is_theory_passed"/>

                    <button name="action_complete" string="Cấp chứng chỉ" type="object" class="btn-success" invisible="state != 'practical_test' or not is_practical_passed"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,learning,theory_test,practical_test,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(training_management.action_training_exam_attempt)d" type="action" class="oe_stat_button" icon="fa-pencil-square-o" context="{'search_default_enrollment_id': id, 'default_enrollment_id': id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="theory_score"/>
%</span>
                                <span class="o_stat_text">Lý thuyết</span>
                            </div>
                        </button>

                        <button name="%(training_management.action_training_practical_attempt)d" type="action" class="oe_stat_button" icon="fa-check-square-o" context="{'search_default_enrollment_id': id, 'default_enrollment_id': id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="practical_score"/>
%</span>
                                <span class="o_stat_text">Thực hành</span>
                            </div>
                        </button>
                        <button name="action_open_feedback" type="object" class="oe_stat_button" icon="fa-comment-o" string="Đánh giá">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Đánh giá khóa học</span>
                            </div>
                        </button>
                    </div>


                    <widget name="web_ribbon" title="Đã cấp bằng" bg_color="bg-success" invisible="state != 'completed'"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 style="color: #5d4037;">
                            <field name="course_id" options="{'no_create': True}"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Thông tin học viên">
                            <field name="employee_id" widget="selection"/>
                            <field name="job_position_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Tiến độ &amp; Kết quả">
                            <field name="enrollment_date"/>
                            <field name="completion_date" invisible="state != 'completed'"/>
                            <field name="certificate_id" widget="many2one_button" invisible="not certificate_id"/>

                            <field name="is_theory_passed" widget="boolean_toggle" readonly="1"/>
                            <field name="is_practical_passed" widget="boolean_toggle" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Lịch sử thi Lý thuyết">
                            <field name="theory_exam_ids" readonly="1">
                                <list>
                                    <field name="create_date"/>
                                    <field name="score"/>
                                    <field name="state" widget="badge" decoration-success="state == 'passed'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Lịch sử thi Thực hành (OJT)">
                            <field name="practical_exam_ids" readonly="1">
                                <list>
                                    <field name="examiner_id" string="Cửa hàng trưởng chấm"/>
                                    <field name="create_date"/>
                                    <field name="score"/>
                                    <field name="state" widget="badge" decoration-success="state == 'passed'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_training_enrollment" model="ir.actions.act_window">
        <field name="name">Hồ sơ đào tạo</field>
        <field name="res_model">training.enrollment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_enrollments': 1}</field>
    </record>

</odoo>