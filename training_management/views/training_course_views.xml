<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ======================= KHÓA HỌC / SOP ======================= -->

    <!-- List View: Hiển thị danh sách SOP -->
    <record id="view_training_course_tree" model="ir.ui.view">
        <field name="name">training.course.tree</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <list string="Danh sách Quy trình (SOP)" decoration-success="state=='published'" decoration-muted="state=='archived'">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="job_ids" widget="many2many_tags"/>
                <field name="level" optional="show"/>
                <field name="type" optional="show"/>
                <field name="main_trainer_id" optional="hide"/>
                <field name="enrollment_count" string="Nhân viên"/>
                <field name="state" widget="badge" decoration-success="state=='published'" decoration-warning="state=='draft'"/>
                <field name="responsible_id" widget="many2one_avatar_user" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View: Chi tiết 1 SOP -->
    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Chi tiết Quy trình">
                <header>
                    <button name="action_publish" string="Ban hành SOP" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_reset_to_draft" string="Sửa lại" type="object" invisible="state != 'published'"/>
                    <button name="action_archive" string="Lưu trữ/Ngưng dùng" type="object" invisible="state == 'archived'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_materials" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="material_count" widget="statbutton" string="Công thức"/>
                        </button>
                        <button name="action_view_enrollments" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="enrollment_count" widget="statbutton" string="Nhân viên"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Đã lưu trữ" bg_color="bg-danger" invisible="state != 'archived'"/>
                    <widget name="web_ribbon" title="Chính thức" bg_color="bg-success" invisible="state != 'published'"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Tên Quy trình / Món"/>
                        <h1>
                            <field name="name" placeholder="Vd: Quy trình pha chế Freeze Trà Xanh"/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="Mã: SOP-BAR-001"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Phân loại">
                            <field name="category_id"/>
                            <field name="job_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="level"/>
                            <field name="type"/>
                        </group>
                        <group string="Cấu hình đào tạo">
                            <field name="duration" widget="float_time"/>
                            <field name="main_trainer_id" string="Biên soạn bởi"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Nội dung SOP" name="content">
                            <group>
                                <field name="description" nolabel="1" placeholder="Mô tả các bước thực hiện, chèn ảnh minh họa..."/>
                            </group>
                            <group col="2">
                                <group string="Yêu cầu đầu ra">
                                    <field name="objectives" nolabel="1" placeholder="Nhân viên pha được ly nước trong 2 phút..."/>
                                </group>
                                <group string="Yêu cầu tiên quyết">
                                    <field name="prerequisites" nolabel="1" placeholder="Đã học bài Vệ sinh máy..."/>
                                </group>
                            </group>
                        </page>

                        <page string="Sát hạch &amp; Chứng chỉ">
                            <group>
                                <group string="Cấu hình thi">
                                    <field name="has_test" widget="boolean_toggle"/>
                                    <field name="passing_score" invisible="not has_test"/>
                                </group>
                                <group string="Cấp chứng nhận (Certificate)">
                                    <field name="issue_certificate" widget="boolean_toggle"/>
                                    <field name="certificate_template_id" invisible="not issue_certificate"/>
                                    <field name="validity_months" invisible="not issue_certificate"/>
                                </group>
                            </group>
                            <group string="Kỹ năng đạt được (Skill Matrix)">
                                <field name="skill_ids" widget="many2many_tags"/>
                            </group>
                        </page>

                        <page string="Công thức &amp; Video" name="materials">
                            <field name="material_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" string="Tên tài liệu"/>
                                    <field name="material_type"/>
                                    <field name="url" widget="url" placeholder="Link Video/Drive..."/>
                                    <field name="required_reading" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>

                        <page string="Ghi chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_training_course_kanban" model="ir.ui.view">
        <field name="name">training.course.kanban</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="category_id">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="level"/>
                <field name="enrollment_count"/>
                <field name="state"/>
                <field name="job_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="job_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <ul>
                                    <li>Mã: <field name="code"/>
                                    </li>
                                    <li>Cấp độ: <field name="level"/>
                                    </li>
                                </ul>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-pill badge-info">
                                            <i class="fa fa-users"/>
                                            <field name="enrollment_count"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'warning', 'published': 'success'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_training_course_search" model="ir.ui.view">
        <field name="name">training.course.search</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm SOP">
                <field name="name" string="Tên/Mã SOP" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="category_id"/>
                <field name="job_ids" string="Vị trí áp dụng"/>

                <filter string="SOP Của tôi phụ trách" name="my_courses" domain="[('responsible_id', '=', uid)]"/>
                <separator/>
                <filter string="Đã ban hành" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Đang soạn thảo" name="draft" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <filter string="Cho Pha chế" name="job_barista" domain="[('job_ids.name', 'ilike', 'Pha chế')]"/>
                <filter string="Cho Thu ngân" name="job_cashier" domain="[('job_ids.name', 'ilike', 'Thu ngân')]"/>

                <group expand="0" string="Nhóm theo">
                    <filter string="Bộ phận" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Cấp độ" name="group_level" context="{'group_by': 'level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action chính -->
    <record id="action_training_course" model="ir.actions.act_window">
        <field name="name">Kho Quy trình (SOP)</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo quy trình (SOP) đầu tiên cho Highlands
            </p>
            <p>
                Quản lý công thức pha chế, quy định phục vụ và bài kiểm tra.
            </p>
        </field>
    </record>

    <!-- ======================= DANH MỤC / BỘ PHẬN ======================= -->

    <record id="view_training_course_category_tree" model="ir.ui.view">
        <field name="name">training.course.category.tree</field>
        <field name="model">training.course.category</field>
        <field name="arch" type="xml">
            <list string="Danh sách Bộ phận" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="course_count"/>
            </list>
        </field>
    </record>

    <record id="action_training_course_category" model="ir.actions.act_window">
        <field name="name">Nhóm nghiệp vụ / Bộ phận</field>
        <field name="res_model">training.course.category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>