<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_training_plan_tree" model="ir.ui.view">
        <field name="name">training.plan.list</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <list string="Kế hoạch đào tạo" decoration-info="state == 'in_progress'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="year" optional="show"/>
                <field name="department_id" optional="show"/>
                <field name="start_date" optional="hide"/>
                <field name="end_date" optional="hide"/>
                <field name="total_courses" sum="Tổng khóa"/>
                <field name="total_budget" sum="Tổng ngân sách" widget="monetary"/>
                <field name="responsible_id" widget="many2one_avatar_user" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-info="state == 'in_progress'"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_training_plan_form" model="ir.ui.view">
        <field name="name">training.plan.form</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch đào tạo">
                <header>
                    <button name="action_submit" string="Trình ký kế hoạch" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ví dụ: Kế hoạch đào tạo SOP 2024"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="year"/>
                            <field name="department_id" placeholder="Toàn công ty"/>
                            <field name="responsible_id" widget="many2one_avatar_user"/>
                        </group>
                        <group>
                            <label for="start_date" string="Thời gian thực hiện"/>
                            <div class="o_row">
                                <field name="start_date" widget="daterange" options="{'related_end_date': 'end_date'}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="end_date" widget="daterange" options="{'related_start_date': 'start_date'}"/>
                            </div>
                            <!-- <field name="approval_id" invisible="1"/> TODO: Implement approval workflow -->
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Chi tiết hạng mục (Budget)">
                            <field name="line_ids" readonly="state in ('completed','cancelled')">
                                <list editable="bottom">
                                    <field name="course_id"/>
                                    <field name="period"/>
                                    <field name="trainee_count"/>
                                    <field name="budget" widget="monetary"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_courses"/>
                                <field name="total_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page string="Mục tiêu &amp; Ghi chú">
                            <field name="description" placeholder="Mô tả mục tiêu chiến lược của kế hoạch này..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_training_plan_search" model="ir.ui.view">
        <field name="name">training.plan.search</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="year"/>
                <filter string="Năm nay" name="current_year" domain="[('year', '=', context_today().strftime('%Y'))]"/>
                <filter string="Đang triển khai" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <group expand="0" string="Group By">
                    <filter string="Năm" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_training_plan" model="ir.actions.act_window">
        <field name="name">Lập kế hoạch đào tạo</field>
        <field name="res_model">training.plan</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo kế hoạch đào tạo mới (Giai đoạn 1)
            </p>
            <p>
                Xác định ngân sách, khóa học và lộ trình triển khai cho toàn hệ thống.
            </p>
        </field>
    </record>

</odoo>