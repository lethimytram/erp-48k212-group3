<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_training_management" model="ir.module.category">
        <field name="name">Training Management</field>
        <field name="description">Quản lý đào tạo nội bộ</field>
        <field name="sequence">20</field>
    </record>

    <!-- User: Học viên - Chỉ xem và đăng ký khóa học của mình -->
    <record id="group_training_trainee" model="res.groups">
        <field name="name">Học viên</field>
        <field name="category_id" ref="module_training_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- User: Giảng viên - Quản lý khóa học và học viên của mình -->
    <record id="group_training_trainer" model="res.groups">
        <field name="name">Giảng viên</field>
        <field name="category_id" ref="module_training_management"/>
        <field name="implied_ids" eval="[(4, ref('group_training_trainee'))]"/>
    </record>

    <!-- Manager: Quản lý đào tạo - Quản lý toàn bộ module -->
    <record id="group_training_manager" model="res.groups">
        <field name="name">Quản lý đào tạo</field>
        <field name="category_id" ref="module_training_management"/>
        <field name="implied_ids" eval="[(4, ref('group_training_trainer'))]"/>
    </record>
</odoo>
