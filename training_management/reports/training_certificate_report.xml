<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. ĐỊNH NGHĨA ACTION REPORT -->
    <!-- Lưu ý: ID này phải khớp với hàm _generate_pdf trong Python -->
    <record id="action_report_certificate" model="ir.actions.report">
        <field name="name">Chứng chỉ đào tạo</field>
        <field name="model">training.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">training_management.report_certificate_document</field>
        <field name="report_file">training_management.report_certificate_document</field>
        <field name="print_report_name">'Certificate_%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_training_certificate"/>
        <field name="binding_type">report</field>
        <!-- Use default A4 landscape format -->
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

    <!-- 2. TEMPLATE BÁO CÁO (QWEB VIEW) -->
    <template id="report_certificate_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="position: relative; width: 100%; height: 100%; font-family: 'Times New Roman', serif;">

                    <!-- TRƯỜNG HỢP 1: Dùng Mẫu HTML Động (Nếu Admin đã thiết kế trong phần Cấu hình) -->
                    <t t-if="o.certificate_html">
                        <t t-raw="o.certificate_html"/>
                    </t>

                    <!-- TRƯỜNG HỢP 2: Mẫu Mặc định (Dùng khi chưa có Template HTML) -->
                    <!-- Thiết kế style Highlands (Xanh đậm + Vàng đồng) -->
                    <div t-else="" style="width: 100%; height: 98%; border: 10px double #5d4037; padding: 40px; text-align: center; box-sizing: border-box; background-color: #fffcf5;">

                        <!-- Header -->
                        <div style="margin-top: 30px;">
                            <h1 style="font-size: 50px; color: #5d4037; text-transform: uppercase; letter-spacing: 5px; margin-bottom: 10px; font-weight: bold;">Chứng Nhận</h1>
                            <p style="font-size: 24px; color: #b08d55; font-style: italic;">Certificate of Completion</p>
                        </div>

                        <!-- Body -->
                        <div style="margin-top: 50px;">
                            <p style="font-size: 18px; color: #555;">Chứng nhận này được trân trọng trao cho</p>

                            <h2 style="font-size: 45px; color: #000; margin: 25px 0; font-weight: bold; text-transform: uppercase;">
                                <span t-field="o.employee_id.name"/>
                            </h2>

                            <p style="font-size: 18px; color: #555;">Đã hoàn thành xuất sắc quy trình đào tạo</p>

                            <h3 style="font-size: 35px; color: #b08d55; margin: 20px 0; font-weight: bold;">
                                <span t-field="o.course_id.name"/>
                            </h3>
                        </div>

                        <!-- Details Row -->
                        <div style="margin-top: 40px; font-size: 16px; color: #333;">
                            <span>Ngày cấp: <strong>
                                <span t-field="o.issue_date" t-options='{"widget": "date"}'/>
                            </strong>
                        </span>
                        <span style="margin: 0 30px;">•</span>
                        <span>Số hiệu: <strong>
                            <span t-field="o.name"/>
                        </strong>
                    </span>
                    <span style="margin: 0 30px;">•</span>
                    <span>Xếp loại: 
                        <strong>
                            <span t-if="o.grade == 'excellent'">Xuất sắc</span>
                            <span t-if="o.grade == 'good'">Giỏi</span>
                            <span t-if="o.grade == 'pass'">Đạt</span>
                        </strong>
                    </span>
                </div>

                <!-- Signatures -->
                <div style="margin-top: 90px; display: flex; justify-content: space-between; padding: 0 120px;">
                    <div style="text-align: center;">
                        <div style="height: 50px;"></div>                        <!-- Khoảng trống chữ ký -->
                        <div style="border-top: 2px solid #5d4037; width: 220px; margin: 10px auto;"></div>
                        <p style="font-weight: bold; color: #5d4037; font-size: 18px;">Trưởng Bộ Phận Đào Tạo</p>
                    </div>

                    <div style="text-align: center;">
                        <div style="height: 50px;"></div>                        <!-- Khoảng trống chữ ký -->
                        <div style="border-top: 2px solid #5d4037; width: 220px; margin: 10px auto;"></div>
                        <p style="font-weight: bold; color: #5d4037; font-size: 18px;">Giám Đốc Vận Hành</p>
                    </div>
                </div>

                <!-- Footer -->
                <div style="position: absolute; bottom: 20px; left: 0; width: 100%; text-align: center; font-size: 12px; color: #999;">
                    <span t-field="o.company_id.name"/>
 | Hệ thống Đào tạo Nội bộ
                </div>
            </div>

        </div>
    </t>
</t>
</template>
</odoo>