<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_training_exam_grading_wizard_form" model="ir.ui.view">
        <field name="name">training.exam.grading.wizard.form</field>
        <field name="model">training.exam.grading.wizard</field>
        <field name="arch" type="xml">
            <form string="Chấm điểm bài thi">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="exam_id"/>
                        </group>
                        <group>
                            <field name="total_points_essay"/>
                            <field name="points_earned_essay" decoration-success="points_earned_essay > 0"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Câu hỏi Tự luận">
                            <field name="grading_line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="question_content" widget="html" width="300px"/>
                                    <field name="essay_answer" width="300px"/>
                                    <field name="max_points" sum="Total Max"/>
                                    <field name="points_earned" sum="Total Earned"/>
                                    <field name="teacher_comment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <group>
                        <field name="teacher_notes" placeholder="Nhận xét chung về bài làm..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_grade" string="Lưu &amp; Hoàn tất chấm" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_training_exam_grading_wizard" model="ir.actions.act_window">
        <field name="name">Chấm điểm Tự luận</field>
        <field name="res_model">training.exam.grading.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>