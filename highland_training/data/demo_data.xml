<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Demo Course: Barista Basic -->
    <record id="demo_course_barista" model="training.course">
        <field name="name">Barista Cơ bản</field>
        <field name="code">BAR-001</field>
        <field name="course_type">skill</field>
        <field name="description"><![CDATA[
            <h3>Khóa học Barista Cơ bản</h3>
            <p>Học các kỹ năng cơ bản để trở thành một Barista chuyên nghiệp tại Highland Coffee.</p>
            <ul>
                <li>Pha chế espresso</li>
                <li>Đánh sữa</li>
                <li>Latte art cơ bản</li>
                <li>Quy trình phục vụ</li>
            </ul>
        ]]>        </field>
        <field name="exam_question_count">10</field>
        <field name="exam_duration">20</field>
        <field name="exam_pass_score">80</field>
        <field name="practice_pass_percent">80</field>
        <field name="state">active</field>
        <field name="sequence">10</field>
    </record>

    <!-- Demo Content -->
    <record id="demo_content_1" model="training.content">
        <field name="name">Video: Giới thiệu nghề Barista</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="content_type">video</field>
        <field name="video_url">https://www.youtube.com/watch?v=example</field>
        <field name="duration">15</field>
        <field name="sequence">10</field>
    </record>

    <record id="demo_content_2" model="training.content">
        <field name="name">Công thức: Espresso chuẩn</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="content_type">recipe</field>
        <field name="recipe_ingredients">- Cà phê: 18g
- Nhiệt độ nước: 92-96°C
- Áp suất: 9 bar
- Thời gian chiết xuất: 25-30 giây
- Lượng ra: 30ml</field>
        <field name="recipe_steps"><![CDATA[
            <ol>
                <li>Chuẩn bị portafilter sạch và khô</li>
                <li>Xay cà phê độ mịn vừa phải</li>
                <li>Đong 18g bột vào portafilter</li>
                <li>Tamper với áp lực đều 15kg</li>
                <li>Lock vào group head</li>
                <li>Chiết xuất 25-30 giây</li>
                <li>Kiểm tra màu sắc và độ đặc</li>
            </ol>
        ]]>        </field>
        <field name="sequence">20</field>
    </record>

    <!-- Demo Questions -->
    <record id="demo_question_1" model="training.question">
        <field name="name">Nhiệt độ nước lý tưởng để pha espresso là?</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="question_type">single</field>
        <field name="points">1</field>
        <field name="sequence">10</field>
    </record>

    <record id="demo_answer_1_1" model="training.answer">
        <field name="question_id" ref="demo_question_1"/>
        <field name="name">80-85°C</field>
        <field name="is_correct" eval="False"/>
        <field name="sequence">1</field>
    </record>

    <record id="demo_answer_1_2" model="training.answer">
        <field name="question_id" ref="demo_question_1"/>
        <field name="name">92-96°C</field>
        <field name="is_correct" eval="True"/>
        <field name="sequence">2</field>
    </record>

    <record id="demo_answer_1_3" model="training.answer">
        <field name="question_id" ref="demo_question_1"/>
        <field name="name">98-100°C</field>
        <field name="is_correct" eval="False"/>
        <field name="sequence">3</field>
    </record>

    <record id="demo_question_2" model="training.question">
        <field name="name">Thời gian chiết xuất espresso chuẩn là?</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="question_type">single</field>
        <field name="points">1</field>
        <field name="sequence">20</field>
    </record>

    <record id="demo_answer_2_1" model="training.answer">
        <field name="question_id" ref="demo_question_2"/>
        <field name="name">15-20 giây</field>
        <field name="is_correct" eval="False"/>
        <field name="sequence">1</field>
    </record>

    <record id="demo_answer_2_2" model="training.answer">
        <field name="question_id" ref="demo_question_2"/>
        <field name="name">25-30 giây</field>
        <field name="is_correct" eval="True"/>
        <field name="sequence">2</field>
    </record>

    <record id="demo_answer_2_3" model="training.answer">
        <field name="question_id" ref="demo_question_2"/>
        <field name="name">35-40 giây</field>
        <field name="is_correct" eval="False"/>
        <field name="sequence">3</field>
    </record>

    <!-- Demo Checklist -->
    <record id="demo_checklist_1" model="training.checklist">
        <field name="name">Đúng định lượng cà phê (18g ±0.5g)</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="category">recipe</field>
        <field name="is_required" eval="True"/>
        <field name="sequence">10</field>
    </record>

    <record id="demo_checklist_2" model="training.checklist">
        <field name="name">Tamper đều và phẳng</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="category">technique</field>
        <field name="is_required" eval="True"/>
        <field name="sequence">20</field>
    </record>

    <record id="demo_checklist_3" model="training.checklist">
        <field name="name">Thời gian chiết xuất đúng (25-30s)</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="category">time</field>
        <field name="is_required" eval="True"/>
        <field name="sequence">30</field>
    </record>

    <record id="demo_checklist_4" model="training.checklist">
        <field name="name">Vệ sinh portafilter sau mỗi lần pha</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="category">hygiene</field>
        <field name="is_required" eval="True"/>
        <field name="sequence">40</field>
    </record>

    <record id="demo_checklist_5" model="training.checklist">
        <field name="name">Thái độ nhiệt tình, lịch sự với khách</field>
        <field name="course_id" ref="demo_course_barista"/>
        <field name="category">service</field>
        <field name="is_required" eval="False"/>
        <field name="sequence">50</field>
    </record>

</odoo>
