<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Plan Tree View -->
    <record id="view_training_plan_tree" model="ir.ui.view">
        <field name="name">training.plan.tree</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <list string="Kế hoạch đào tạo">
                <field name="name"/>
                <field name="quarter"/>
                <field name="year"/>
                <field name="total_enrollments"/>
                <field name="completed_enrollments"/>
                <field name="completion_rate" widget="progressbar"/>
                <field name="state" decoration-info="state=='draft'" decoration-success="state=='done'"/>
            </list>
        </field>
    </record>

    <!-- Training Plan Form View -->
    <record id="view_training_plan_form" model="ir.ui.view">
        <field name="name">training.plan.form</field>
        <field name="model">training.plan</field>
        <field name="arch" type="xml">
            <form string="Kế hoạch đào tạo">
                <header>
                    <button name="action_confirm" string="Xác nhận kế hoạch" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_enroll_bulk" string="Ghi danh hàng loạt" type="object" invisible="state == 'draft'" class="btn-success"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên kế hoạch..." readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="quarter" readonly="state != 'draft'"/>
                            <field name="year" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="total_enrollments"/>
                            <field name="completed_enrollments"/>
                            <field name="completion_rate" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Khóa học">
                            <field name="course_ids" readonly="state != 'draft'">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>
                        <page string="Danh sách ghi danh">
                            <field name="enrollment_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="course_id"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Plan Action -->
    <record id="action_training_plan" model="ir.actions.act_window">
        <field name="name">Kế hoạch đào tạo</field>
        <field name="res_model">training.plan</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
