<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_training_plan_enroll_wizard_form" model="ir.ui.view">
        <field name="name">training.plan.enroll.wizard.form</field>
        <field name="model">training.plan.enroll.wizard</field>
        <field name="arch" type="xml">
            <form string="Ghi danh nhân viên vào khóa học">
                <group>
                    <group>
                        <field name="plan_id" readonly="1"/>
                        <field name="course_id" required="1"/>
                    </group>
                    <group>
                        <field name="department_id"/>
                    </group>
                </group>
                <group string="Chọn nhân viên">
                    <field name="employee_ids" nolabel="1" widget="many2many">
                        <list>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="action_enroll" string="Ghi danh" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action để mở wizard -->
    <record id="action_training_plan_enroll_wizard" model="ir.actions.act_window">
        <field name="name">Ghi danh nhân viên</field>
        <field name="res_model">training.plan.enroll.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
