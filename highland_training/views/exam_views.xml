<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Exam Tree View -->
    <record id="view_training_exam_tree" model="ir.ui.view">
        <field name="name">training.exam.tree</field>
        <field name="model">training.exam</field>
        <field name="arch" type="xml">
            <list string="Bài thi" create="0" sample="1">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="score" widget="progressbar"/>
                <field name="is_passed" widget="boolean_toggle"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'graded'"/>
            </list>
        </field>
    </record>

    <!-- Exam Form View -->
    <record id="view_training_exam_form" model="ir.ui.view">
        <field name="name">training.exam.form</field>
        <field name="model">training.exam</field>
        <field name="arch" type="xml">
            <form string="Bài thi" create="0">
                <header>
                    <button name="action_start" string="Bắt đầu thi" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_submit" string="Nộp bài" type="object" invisible="state != 'in_progress'" class="oe_highlight" confirm="Bạn có chắc muốn nộp bài?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,submitted,graded"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Đạt" bg_color="text-bg-success" invisible="not is_passed or state != 'graded'"/>
                    <widget name="web_ribbon" title="Không đạt" bg_color="text-bg-danger" invisible="is_passed or state != 'graded'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="course_id" readonly="1"/>
                            <field name="enrollment_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                            <field name="score" widget="percentpie" readonly="1"/>
                            <field name="is_passed" widget="boolean_toggle" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Câu trả lời" name="answers">
                            <field name="answer_ids">
                                <list decoration-success="is_correct == True" decoration-danger="is_correct == False and parent.state == 'graded'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="question_id"/>
                                    <field name="selected_answer_ids" widget="many2many_tags"/>
                                    <field name="is_correct" widget="boolean_toggle" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Exam Search View -->
    <record id="view_training_exam_search" model="ir.ui.view">
        <field name="name">training.exam.search</field>
        <field name="model">training.exam</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm bài thi">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="course_id"/>
                <filter string="Đã đạt" name="passed" domain="[('is_passed', '=', True)]"/>
                <filter string="Không đạt" name="failed" domain="[('is_passed', '=', False), ('state', '=', 'graded')]"/>
                <filter string="Đang thi" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Khóa học" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Nhân viên" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Admin: All Exams -->
    <record id="action_training_exam" model="ir.actions.act_window">
        <field name="name">Kết quả thi</field>
        <field name="res_model">training.exam</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có bài thi nào
            </p>
        </field>
    </record>

    <!-- Employee: My Exams -->
    <record id="action_my_exams" model="ir.actions.act_window">
        <field name="name">Bài thi của tôi</field>
        <field name="res_model">training.exam</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("employee_id.user_id", "=", uid)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bạn chưa có bài thi nào
            </p>
            <p>
                Vào "Khóa học của tôi" để bắt đầu làm bài thi
            </p>
        </field>
    </record>

</odoo>
