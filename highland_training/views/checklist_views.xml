<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Checklist Form View -->
    <record id="view_training_checklist_form" model="ir.ui.view">
        <field name="name">training.checklist.form</field>
        <field name="model">training.checklist</field>
        <field name="arch" type="xml">
            <form string="Tiêu chí đánh giá">
                <sheet>
                    <group>
                        <group>
                            <field name="course_id"/>
                            <field name="category"/>
                            <field name="is_required"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <field name="name" placeholder="Tên tiêu chí..."/>
                    </group>
                    <group>
                        <field name="description" placeholder="Mô tả chi tiết..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Checklist Tree View -->
    <record id="view_training_checklist_tree" model="ir.ui.view">
        <field name="name">training.checklist.tree</field>
        <field name="model">training.checklist</field>
        <field name="arch" type="xml">
            <list string="Checklist thực hành">
                <field name="sequence" widget="handle"/>
                <field name="course_id"/>
                <field name="name"/>
                <field name="category"/>
                <field name="is_required" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Checklist Action -->
    <record id="action_training_checklist" model="ir.actions.act_window">
        <field name="name">Checklist thực hành</field>
        <field name="res_model">training.checklist</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
